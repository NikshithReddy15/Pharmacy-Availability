<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Welcome to MedEZ</title>
        
        <!-- Font Awesome -->
        <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

        <!-- Ajax -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="card-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <div class="navbar-nav nav-item">
                    <a href="/" class="nav-link">About Us</a>
                </div>
                <div class="navbar-nav nav-item ml-auto">
                    <a href="/pharmacyLogin" class="nav-link">Seller Login</a>
                    <a href="/customerLogin" class="nav-link">Customer Login</a>
                </div>

            </nav>

            <div class="card-body fixed">
                <section class="content-header">
                    <h1>MedEZ</h1>
                </section>

                <section class="content-body">
                    <div class="card">
                        <div class="card-title card-header bg-primary">Customer Portal</div>
                        <form action="/addCustomerLogin" method="post">
                            <div class="card-body">
                                <div class="row form-control-sm" style="margin: 20px 0;">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter your Name:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" placeholder="Enter your Name" id="customerName" name="customerName" required></div>
                                </div>
                                <div class="row form-control-sm" style="margin: 20px 0;">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Login ID:</label>
                                    <div class="col-8"><input type="email" class="form-control form-control-sm" placeholder="Enter your Login ID" id="customerID" name="customerID" required></div>
                                </div>
                                <div class="row form-control-sm" style="margin: 20px 0;">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Phone number:</label>
                                    <div class="col-8"><input type="tel" class="form-control form-control-sm" placeholder="Enter a valid phone number" id="phone" name="phone" required></div>
                                </div>
                                <div class="row form-control-sm" style="margin: 20px 0;">
                                    <label for="" class="form-control-sm col-4 col-form-label">Choose a Password:</label>
                                    <div class="col-8"><input type="password" class="form-control form-control-sm" placeholder="Enter your Password" id="customerPassword" name="customerPassword" required></div>
                                </div>
                                <div class="row form-control-sm" style="margin: 20px 0;">
                                    <label for="" class="form-control-sm col-4 col-form-label">Confirm Password:</label>
                                    <div class="col-8"><input type="password" class="form-control form-control-sm" placeholder="Confirm your Password" id="customerPasswordConfirm" name="customerPasswordConfirm" required></div>
                                </div>
                            </div>

                            <div class="card-footer row" style="margin: 0;">
                                <ul class="">
                                    <button type="submit" class="btn btn-info" id="registerButton" disabled="true">Register</button>
                                </ul>
                                <ul class="ml-auto">
                                    <a href="/customerLogin">Already a member? Sign-in.</a>
                                </ul>
                            </div>
                        </form>
                        <script>
                            $('#customerPasswordConfirm').on('input', check);
                            $('#customerPassword').on('input', check);
                            $('#customerID').on('input', check);
                            $('#customerName').on('input', check);
                            $('#phone').on('input', check);

                            function check() {
                                if(document.getElementById("phone").value != "" && document.getElementById("customerName").value != "" && document.getElementById("customerID").value != "" && document.getElementById("customerPassword").value != "" && document.getElementById("customerPassword").value.localeCompare(document.getElementById("customerPasswordConfirm").value) == 0) {
                                    document.getElementById("registerButton").disabled = false;
                                } else {
                                    document.getElementById("registerButton").disabled = true;
                                }
                            }
                        </script>
                    </div>
                </section>
            </div>
        </div>
    </body>
</html>