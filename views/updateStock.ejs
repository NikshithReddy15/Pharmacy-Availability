<html>
    <head>
        <meta charset="utf-8">
        
        <title>MedEZ: Pharmcy Portal Dashboard</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                </ul>
                <a href="/pharmacyDashboard" class="nav-link" style="color: grey;">Home</a>
                <a href="/pharmacyLogout" class="nav-link ml-auto" id="logoutButton" style="color: lightgrey;" onmouseenter="change()" onmouseleave="back()">Logout</a>

            </nav>
            <!-- /.navbar -->
            
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="/pharmacyProfileInfo" class="brand-link">
                <span class="brand-text font-weight-light">
                    Welcome, <br>
                    <span class="brand-text font-weight-light" style="font-size: medium;"><%=details[0].name%></span>
                </span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="addMedicinePage" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Add Medicine</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="depletedStock" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Depleted Stock</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="updateStockPage" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Update Stock Details</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="pharmacyOrdersPage" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Received Orders</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
            
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                
                <section class="content-header">
                    <h1>MedEZ</h1>
                </section>
                
                <section class="content-body" style="margin: 0 8px;">
                    <div class="card" style="margin: 0;">
                        <div class="card-title card-header bg-primary">Update Stock Details</div>
                        <form action="/updateStock" method="post" style="margin: 0;">
                            <div class="card-body">
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Select Medicine:</label>
                                    <select class="form-control-sm" name="medicineCategoryName" id="medicineCategoryName" style="margin: 0 8px;" required>
                                        <option value="">-- Select Medicine --</option>
                                        <%for(var i = 0; i < data.length; i++) {%>
                                            <option value="<%=data[i].medicineid%>"><%=data[i].medicineid%> - <%=data[i].category%> - <%=data[i].medicine%></option>
                                        <%}%>
                                    </select>
                                </div><br>
                                <input type="hidden" name="medicineID" id="medicineID">
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Category:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" name="medicineCategory" id="medicineCategory" required></div>
                                </div><br>
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Name:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" name="medicineName" id="medicineName" required></div>
                                </div><br>
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Stock:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" name="medicineStock" id="medicineStock" required></div>
                                </div><br>
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Cost Price:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" name="medicineCostPrice" id="medicineCostPrice" required></div>
                                </div><br>
                                <div class="row form-control-sm">
                                    <label for="" class="form-control-sm col-4 col-form-label">Enter Selling Price:</label>
                                    <div class="col-8"><input type="text" class="form-control form-control-sm" name="medicineSellingPrice" id="medicineSellingPrice" required></div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Update Stock</button>
                            </div>
                        </form>
                    </div>
                </section>

            </div>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
        </div>
        <!-- ./wrapper -->

        <!-- jQuery -->
        <script src="/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- overlayScrollbars -->
        <script src="/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <!-- AdminLTE App -->
        <script src="/dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="/dist/js/demo.js"></script>
        <!--Socket.io-->
        <script src="https://cdn.socket.io/4.4.0/socket.io.min.js" integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj" crossorigin="anonymous"></script>
        
        <script>

            function change() {
                document.getElementById("logoutButton").style.color = 'black';
            }
            function back() {
                document.getElementById("logoutButton").style.color = 'lightgrey';
            }

            var loc;
            if(window.location.port != "") {
                loc = window.location.protocol+"//"+window.location.hostname+":"+window.location.port;
            } else {
                loc = window.location.protocol+"//"+window.location.hostname;
            }

            $(document).ready(function() {
                $('#medicineCategoryName').on('change', function() {
                    var medicineid = this.value;
                    $.ajax({
                        url: loc+'/getMedicineStock',
                        method: 'POST',
                        data: {
                            name: 'stocklabel',
                            medicineid: medicineid
                        },
                        dataType: 'JSON',
                        success: function(result) {
                            document.getElementById('medicineID').value = result.stock[0].medicineid;
                            document.getElementById('medicineCategory').value = result.stock[0].category;
                            document.getElementById('medicineName').value = result.stock[0].medicine;
                            document.getElementById('medicineStock').value = result.stock[0].stock;
                            document.getElementById('medicineCostPrice').value = result.stock[0].costprice;
                            document.getElementById('medicineSellingPrice').value = result.stock[0].sellingprice;
                        }
                    });
                });
            });
        </script>

    </body>
</html>